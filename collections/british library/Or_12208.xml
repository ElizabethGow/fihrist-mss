                          class="http://lccn.loc.gov/sh85100085 http://lccn.loc.gov/sh2002005579">
                     <locus from="231v" to="325v">f 231v-325v</locus>
                     <author key="n80115655" ref="http://viaf.org/viaf/2474895/">
                        <persName xml:lang="fa-Latn-x-lc"
                                  type="standard"
                                  key="n80115655">Niẓāmī Ganjavī, 1140 or 41-1202 or 3</persName>
                        
                        
