                <persName xml:lang="per" key="Persian_0073" type="supplied">&#x627;&#x644;&#x644;&#x647; &#x64A;&#x627;&#x631; &#x62E;&#x627;&#x646; &#x628;&#x62E;&#x627;&#x631;&#x649;</persName>
              </author>
