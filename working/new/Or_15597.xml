                <persName xml:lang="ara-Latn-x-lc" type="" key="http://lccn.loc.gov/n80013285">Khw&#x101;jah &#x2018;Abd All&#x101;h An&#x1E63;&#x101;r&#x12B; Haravi</persName>
                <persName xml:lang="ara" key="http://lccn.loc.gov/n80013285" type="supplied">&#x627;&#x646;&#x635;&#x627;&#x631;&#x649; &#x627;&#x644;&#x647;&#x631;&#x648;&#x649;&#x60C; &#x639;&#x628;&#x62F; &#x627;&#x644;&#x644;&#x647; &#x628;&#x646; &#x645;&#x62D;&#x645;&#x62F;</persName>
